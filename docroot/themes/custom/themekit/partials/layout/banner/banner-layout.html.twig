{#
/**
 * @file
 * Default theme implementation to display a banner layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% set classes = [
  'banner',
] %}

{{ attach_library('themekit/layout') }}
{{ attach_library('themekit/layout--banner') }}

{% if content %}
  <div{{ attributes.addClass(classes).removeClass('layout') }}>
    <div class="layout-content">
      {% if content.first %}
        <div {{ region_attributes.first.addClass('layout__region') }}>
          {{ content.first }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
