{% extends "@partials/node/node-wrapper.html.twig" %}

{% set rendered_content = content|without('field_image')%}

{% block node %}
  <a href="{{ url }}" title="{{ node.label }}">
    {{ content.field_image }}
    <div class="node__intro">
      {{ node.getCreatedTime|format_date('short') }}
      <h2{{ title_attributes.addClass('node__title') }}>{{ node.label }}</h2>
      {{ rendered_content }}
    </div>
  </a>
{% endblock %}
