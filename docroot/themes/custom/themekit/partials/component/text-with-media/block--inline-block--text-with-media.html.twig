{% extends "@partials/component/block.html.twig" %}

{% set rendered_content = content|without('field_media') %}
{% set block = content['#block_content'] %}
{% set classes = [
  block.field_media_position.value ? 'media-position--' ~ block.field_media_position.value,
] %}
{% set attributes = attributes.addClass(classes) %}

{% block content %}
  <div class="mobile-heading">
    {{ content.field_heading }}
  </div>
  <div class="media">
    <span class="frame"></span>
    {{ content.field_media }}
  </div>
  <div class="content">
    {{ rendered_content }}
  </div>
{% endblock %}
