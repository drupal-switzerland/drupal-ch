{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}

{{ attach_library('themekit/media--type--' ~ media.bundle()|clean_class) }}
{{ attach_library('themekit/media--view-mode--' ~ view_mode|clean_class ~ '--' ~ media.bundle()|clean_class) }}
{{ attach_library('themekit/media--type--' ~ media.bundle()|clean_class ~ '--' ~ view_mode|clean_class) }}

{%
  set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    {{ content }}
  {% endif %}
</article>
