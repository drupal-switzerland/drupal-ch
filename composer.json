{
    "name": "drupal-switzerland/drupal-ch",
    "description": "The Drupal Switzerland website",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "ext-json": "*",
        "amazeelabs/silverback": "dev-test-dan",
        "drupal-composer/drupal-scaffold": "^2.6",
        "drupal/address": "^1.7",
        "drupal/config_ignore": "^2.1",
        "drupal/gin": "2.x-dev",
        "drupal/graphql": "^3.0",
        "drupal/honeypot": "^1.29",
        "drupal/menu_item_extras": "^2.8",
        "drupal/metatag": "^1.10",
        "drupal/paragraphs": "^1.10",
        "drupal/pathauto": "^1.6",
        "drupal/purge": "^3.0@beta",
        "drupal/search_api": "^1.15",
        "drupal/simple_sitemap": "^3.4",
        "drupal/upgrade_status": "^1.1",
        "drupal/varnish_purge": "^1.11",
        "drupal/video_embed_field": "^2.2",
        "drupal/webform": "^5.5",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "run-tests": [
            "if [ -d web/modules/custom ]; then phpunit web/modules/custom; fi",
            "npm ci && CYPRESS_TAGS=@COMPLETED cypress run"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "#2998194 - Undefined index: #summary_attributes": "https://www.drupal.org/files/issues/2018-12-17/core-undefined-index-summary_attributes-2998194-9.patch"
            }
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "merge-plugin": {
            "include": [
                "packages/composer.json"
            ],
            "replace": true
        }
    }
}
