{
    "name": "drupal-switzerland/drupal-ch",
    "description": "The Drupal Switzerland website",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "*",
        "ext-json": "*",
        "ext-zip": "*",
        "alchemy/zippy": "v0.5.x-dev",
        "amazeeio/drupal_integrations": "^0.5.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/address": "^1.12",
        "drupal/admin_toolbar": "^3.6",
        "drupal/components": "^3.0",
        "drupal/core": "^10.0",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/environment_indicator": "^4.0",
        "drupal/gin": "^3.1",
        "drupal/git_deploy": "^2.6",
        "drupal/graphql": "^3.0",
        "drupal/graphql_twig": "^3.0",
        "drupal/honeypot": "^2.1",
        "drupal/lagoon_logs": "^2.1",
        "drupal/linkit": "^6.0",
        "drupal/menu_item_extras": "^3.0",
        "drupal/metatag": "^2.1",
        "drupal/paragraphs": "^1.17",
        "drupal/pathauto": "^1.13",
        "drupal/purge": "^3.6",
        "drupal/redirect": "^1.11",
        "drupal/search_api": "^1.30",
        "drupal/simple_sitemap": "^4.1",
        "drupal/tmgmt": "^1.15",
        "drupal/token": "^1.15",
        "drupal/varnish_purge": "^2.3",
        "drupal/video_embed_field": "^2.5",
        "drupal/webform": "^6.2",
        "drush/drush": "^13.0",
        "vlucas/phpdotenv": "^5.6",
        "wikimedia/composer-merge-plugin": "^2.1"
    },
    "require-dev": {
        "drupal/core-dev": "^10.0",
        "phpunit/phpunit": "^9.6",
        "sebastian/comparator": "^4.0",
        "sebastian/diff": "^4.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "wikimedia/composer-merge-plugin": true,
            "drupal/console-extend-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "run-tests": [
            "if [ -d web/modules/custom ]; then phpunit web/modules/custom; fi",
            "npm ci && CYPRESS_TAGS=@COMPLETED cypress run"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "#2998194 - Undefined index: #summary_attributes": "https://www.drupal.org/files/issues/2018-12-17/core-undefined-index-summary_attributes-2998194-9.patch"
            }
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "amazeeio/drupal_integrations"
            ],
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "merge-plugin": {
            "include": [
                "packages/composer.json"
            ],
            "replace": true
        }
    }
}
