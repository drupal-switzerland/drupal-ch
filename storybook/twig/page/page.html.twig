{% block header %}
  {% if graphql.mainMenu %}
    {% include '@twig/header/header.html.twig' with graphql.mainMenu | merge({ is_front: is_front}) only %}
  {% endif %}
{% endblock %}

{% block content %}
  <main id="main-content">
    {{ page.content }}
  </main>
{% endblock %}

{% block footer %}
  {% if graphql.footerMenu %}
    {% include '@twig/footer/footer.html.twig' with graphql.footerMenu only %}
  {% endif %}
{% endblock %}
