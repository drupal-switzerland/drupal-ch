{% if entity %}
  {% set media = entity %}
  {% if media is not empty %}
    <section class="embed-media">
      {% if media.type == 'MediaImage' %}
        {% include '@storybook/components/media/media-image/media-image.html.twig' with {
          mediaImage: media.mediaImage,
          imageStyle: 'rectangularLarge'
        } only %}
      {% elseif media.type == 'MediaVideo' %}
        {% include '@storybook/components/media/media-video/media-video.html.twig' with media only %}
      {% elseif media.type == 'MediaDocument' %}
        {% include '@storybook/components/media/media-document/media-document.html.twig' with media.document.entity only %}
      {% endif %}
    </section>
  {% endif %}
{% endif %}
