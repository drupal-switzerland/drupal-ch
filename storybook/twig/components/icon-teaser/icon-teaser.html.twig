<section {{ componentId ? 'id='~ (componentId | clean_class) : '' }} class="icon-teaser {{ class }}">
  <div class="icon-teaser__content">
    <div class="icon-teaser__icon">
      {% if icon %}
      <span class="icon-{{ icon }}"></span>
      {% endif %}
    </div>
    {% if title %}
      <h2>{{ title }}</h2>
    {% endif %}
    {% if text %}
      <div class="icon-teaser__content-text">{{ text.processed | raw }}</div>
    {% endif %}
  </div>
</section>
