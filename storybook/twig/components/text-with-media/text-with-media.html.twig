<section class="text-with-media inner">
  <div class="two-columns {{ media.entity.position }}">
    <div class="two-columns__column">
      {% if media %}
        <div class="text-with-media__media {{ media.entity.media.entity.type == 'MediaImage' ? 'text-with-media__media--image' : '' }}">
          {% include '@storybook/components/embed-media/embed-media.html.twig' with media.entity only %}
        </div>
      {% endif %}
    </div>
    <div class="two-columns__column">
      {% include '@storybook/components/text/text.html.twig' with text.entity only %}
    </div>
  </div>
</section>
