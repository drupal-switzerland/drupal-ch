<section {{ componentId ? 'id='~ (componentId | clean_class) : '' }} class="highlight">
  <div class="highlight__content relative">
    {% if title is not empty %}
      <h2>{{ title }}</h2>
    {% endif %}
    {% if text is not empty %}
      <div class="highlight__content-text">{{ text.processed | raw }}</div>
    {% endif %}
  </div>
</section>
