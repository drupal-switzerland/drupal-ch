<section {{ componentId ? 'id=' ~ (componentId | clean_class) : '' }} class="image invert">
  <div class="image__media">
    {% include '@twig/components/media/media.html.twig' with image only %}
  </div>
  <div class="image__content--wrapper inner">
    <div class="image__content">
        {% if isHero %}
          <h1 class="image__title">{{ heroTitle }}</h1>
        {% endif %}
    </div>
  </div>
</section>
